<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/nav_item_magin_left"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/game_default" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/nav_item_magin_left"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="斗地主"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/nav_item_text_size" />

            <TextView
                android:id="@+id/tv_rank1_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tom"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/txt_h5" />

            <TextView
                android:id="@+id/tv_rank2_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jack"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/txt_h5" />

            <TextView
                android:id="@+id/tv_rank3_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nick"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/txt_h5" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/nav_item_magin_left"
        android:layout_weight="1.2"
        android:gravity="bottom|right"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="27568分"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/txt_h5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="27567分"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/txt_h5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="27566分"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/txt_h5" />
    </LinearLayout>

</LinearLayout>